<div data-controller="visibility">
  <div class="flex justify-center items-center mx-8 -mt-24" data-visibility-target="hideable" hidden>
    <div class="w-full p-8 rounded-md bg-white shadow-xl space-y-8 z-101">
        <%= render "form", certificate: certificate %>
    </div>
  </div>

  <div class="flex flex-col md:flex-row justify-between gap-4" data-visibility-target="hideable">
    <button class="w-full grow text-white sm:w-auto text-center rounded-md px-3 py-2 bg-blue-500/70 hover:bg-blue-500 inline-block font-medium">Add to cart</button>
    <% if show_edit %>
      <button class="w-full grow text-white sm:w-auto text-center rounded-md px-3 py-2 bg-gray-500/70 hover:bg-gray-500 inline-block font-medium" data-action="visibility#toggleTargets">Edit</button>
    <% end %>
    <%= button_to "✖︎ Delete", certificate, method: :delete, class: "w-full text-white sm:w-auto text-center rounded-md px-3 py-2 min-w-30 bg-red-500/70 hover:bg-red-500 inline-block font-medium", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
