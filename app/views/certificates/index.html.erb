<% content_for :title, "My Certificates" %>

<div class="mx-auto md:w-2/3 w-full flex flex-col gap-8">
  <div class="flex justify-center items-center">
    <%# <h1 class="font-headline text-3xl">My Certificates</h1> %>

    <%== link_to "âœš New", new_certificate_path, class: "w-full min-w-48 text-background dark:text-background-dark sm:w-auto text-center rounded-md px-3 py-2 bg-primary/80 dark:bg-primary-dark/80 hover:bg-primary dark:hov inline-block font-medium" %>
  </div>

  <% if notice.present? %>
    <%= render partial: "notice", locals: {certificate: @certificate} %>
  <% end %>

  <div id="certificates" class="min-w-full flex flex-col gap-16">
    <% if @certificates.any? %>
      <% @certificates.each do |certificate| %>
        <div class="flex flex-col gap-8">
          <%= render certificate %>

          <%= render partial: "action_buttons", locals: {certificate: certificate, show_edit: true} %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No certificates found.</p>
    <% end %>
  </div>
</div>
