<% content_for :title do %>
  Preview
<% end %>

<div class="mx-auto md:w-2/3 w-full flex flex-col gap-8">
  <div class="flex justify-between items-center gap-4">
    <h1 class="font-bold text-4xl">Preview</h1>

    <%= link_to "My certificates", certificates_path, class: "w-36 text-white sm:w-auto text-center rounded-md px-3 py-2 bg-primary/70 hover:bg-primary inline-block font-medium" %>
  </div>

  <% if notice.present? %>
    <%= render partial: "notice", locals: {certificate: @certificate} %>

  <% end %>

  <%= render @certificate %>

  <%= render partial: "action_buttons", locals: {certificate: @certificate, show_edit: true} %>

</div>
