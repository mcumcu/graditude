<% content_for :title do %>
  Preview
<% end %>

<div class="mt-8 mx-auto md:w-2/3 w-full flex flex-col gap-8">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Preview</h1>

    <%= link_to "My certificates", certificates_path, class: "w-full text-white sm:w-auto text-center rounded-md px-3 py-2 bg-blue-500/70 hover:bg-blue-500 inline-block font-medium" %>
  </div>

  <% if notice.present? %>
    <div class="p-8 bg-green-50 text-green-500 font-medium rounded-md inline-block" id="notice">
      <div class="flex justify-between items-baseline">
        <div class="text-lg">
          <%= notice || "Your certificate for #{@certificate.honoree_name} was updated" %> 
        </div>

        <a href="<%= @certificate_path %>" data-turbo="false" class="w-36 text-white sm:w-auto text-center rounded-md px-3 py-2 bg-green-500/70 hover:bg-green-500 inline-block font-medium">
          Update preview
        </a>
      </div>
    </div>
  <% end %>

  <%= render @certificate %>

  <%= render partial: "action_buttons", locals: {certificate: @certificate} %>
</div>
